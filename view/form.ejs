                <label for="emailadres">emailadres</label>
                <input id="email" type="email" name = 'emailadres' placeholder="emailadres" required/>
            </fieldset>
            <fieldset id="form-password">
                <label for="pass">wachtwoord</label>
                <input id="password" type="password" name = 'wachtwoord' required/>
            </fieldset>
            <fieldset>
                <button type="submit" id="submit" value="registreren">registreren</button>
            </fieldset>
        </form>
    </section> 
</body>
